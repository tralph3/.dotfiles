DISTRO=$(lsb_release -i | cut -f 2)

# extracting utility
ex ()
{
    for i in "${@}"; do
        if [ -f $i ] ; then
            case $i in
                *.tar.bz2)   tar xjf $i   ;;
                *.tar.gz)    tar xzf $i   ;;
                *.tar.xz)    tar xJf $i   ;;
                *.bz2)       bunzip2 $i   ;;
                *.rar)       unrar x $i     ;;
                *.gz)        gunzip $i    ;;
                *.tar)       tar xf $i    ;;
                *.tbz2)      tar xjf $i   ;;
                *.tgz)       tar xzf $i   ;;
                *.zip)       unzip $i     ;;
                *.Z)         uncompress $i;;
                *.7z)        7z x $i      ;;
                *)           echo "'$i' cannot be extracted via ex()" ;;
            esac
        else
            echo "'$i' is not a valid file"
        fi
    done
}

# rmv - to remove packages and its dependencies
rmv ()
{
    if [ $1 ] ; then
        case $DISTRO in
            Arch)
                paru --sudoloop -Rnssu $@ && paru --sudoloop -c
                ;;
            Ubuntu)
                sudo apt purge $@ && sudo apt autoremove
                ;;
            Fedora)
                dnf remove $@
                ;;
        esac
    else
        echo "No package provided"
    fi
}

# ins - shorter way to install packages
ins ()
{
    if [ $1 ] ; then
        case $DISTRO in
            Arch)
                paru --sudoloop --skipreview -S $@
                ;;
            Ubuntu)
                sudo apt instal $@
                ;;
            Fedora)
                dnf install $@
                ;;
        esac
    else
        echo "No package provided"
    fi
}

# src - shorter way to search for packages
src ()
{
    if [ $1 ] ; then
        case $DISTRO in
            Arch)
                paru -Ssy --bottomup $@
                ;;
            Ubuntu)
                apt search $@
                ;;
            Fedora)
                dnf search $@
                ;;
        esac
    else
        echo "No package provided"
    fi
}


alias ls='exa -l --icons --header --group-directories-first'
alias la='exa -la --icons --header --group-directories-first'
alias lr='exa -lT -L 2 --icons --header --group-directories-first'
alias lR='exa -lT --icons --header --group-directories-first'

# file editing
export EDITOR=nvim

alias zshrc="${=EDITOR} ~/.zshrc" # Quick access to the ~/.zshrc file
alias aliasrc="${=EDITOR} ~/.zsh/aliasrc" # Quick access to this file
alias nvimrc="${=EDITOR} ~/.config/nvim/init.vim" # Quick access to init.vim

gitpush() {
    git add -A
    git commit -m "$*"
    git push
}

alias gp=gitpush

alias uall="paru --sudoloop --skipreview -Syu"

alias localip='ip -brief -color address'

# Recording device
alias record='pactl load-module module-null-sink sink_name="bh2_openmic" sink_properties=device.description="BeatHazard2_OpenMic"'

alias get-thumbnail="youtube-dl --write-thumbnail --skip-download"

# Docker
alias fedora='sudo docker run -it fedora /bin/bash'
alias ubuntu='sudo docker run -it ubuntu /bin/bash'
