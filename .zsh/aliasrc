# extracting utility
ex ()
{
  for i in "${@}"; do
      if [ -f $i ] ; then
        case $i in
          *.tar.bz2)   tar xjf $i   ;;
          *.tar.gz)    tar xzf $i   ;;
          *.tar.xz)    tar xJf $i   ;;
          *.bz2)       bunzip2 $i   ;;
          *.rar)       unrar x $i     ;;
          *.gz)        gunzip $i    ;;
          *.tar)       tar xf $i    ;;
          *.tbz2)      tar xjf $i   ;;
          *.tgz)       tar xzf $i   ;;
          *.zip)       unzip $i     ;;
          *.Z)         uncompress $i;;
          *.7z)        7z x $i      ;;
          *)           echo "'$i' cannot be extracted via ex()" ;;
        esac
      else
        echo "'$i' is not a valid file"
      fi
  done
}

# rmv - to remove packages and its dependencies
rmv ()
{
  if [ $1 ] ; then
    paru --sudoloop -Rnssu $@ && paru --sudoloop -c
  else
    echo "No package provided"
  fi
}

# ins - shorter way to install packages
ins ()
{
  if [ $1 ] ; then
    paru --sudoloop --skipreview -S $@
  else
    echo "No package provided"
  fi
}

# src - shorter way to search for packages
src ()
{
  if [ $1 ] ; then
    paru -Ssy --bottomup $@
  else
    echo "No package provided"
  fi
}

# terminate - searches for the process id of the given process name, and kills all of them
terminate () {
  if [ $2 ] ; then
    echo "Only one pattern allowed"
  elif [ $1 ] ; then
    processes=$(pgrep -iw $1)
    processes=$(echo $processes | tr "\n" " ")
    echo "Killing $processes"
    sudo kill -9 $processes
  else
    echo "No process specified"
  fi
}

# downgrade - for downgrading packages
downgrade () {
  if [ $1 ] ; then
    paru --sudoloop -U $1
  else
    echo "No package provided"
  fi
}

# install-font - installs ttf fonts on /usr/share/fonts
install-font () {
  if [ $1 ] ; then
    sudo mv $@ /usr/share/fonts
  else
    echo "No font provided"
  fi
}

export EDITOR=nvim

